<script>
    const myDiv = document.getElementById('emailVerificationControl_but_change_claims');

    const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
            if (mutation.attributeName === 'style') {
                const isVisible = myDiv.style.display !== 'none';
                if (isVisible) {
                    // Do something when the div becomes visible
                    //alert('Button is now visible!');

                    $("#attributeList .newPassword_li").attr('style', 'display: list-item !important');
                    $("#attributeList .reenterPassword_li").attr('style', 'display: list-item !important');
                    $("#attributeList .displayName_li").attr('style', 'display: list-item !important');

                    $("button#continue").attr('style', 'display: initial !important');
                    $("button#cancel").attr('style', 'display: initial !important');

                }
            }
        });
    });

    observer.observe(myDiv, { attributes: true });

</script>

