        .module-btn {
            width: 200px;
            background-color: #29b6f6;
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 1rem;
            box-shadow: 2px 4px 8px rgba(0,0,0,0.15);
            position: relative;
        }

            .module-btn:hover {
                background-color: #0288d1;
            }

        .tooltip-box {
            background-color: #0288d1;
            color: #fff;
            padding: 1rem;
            border-radius: 10px;
            width: 300px;
            position: absolute;
            top: -130px;
            left: 50%;
            transform: translateX(-50%);
            display: none;
            z-index: 10;
        }

        .module-wrapper:hover .tooltip-box {
            display: block;
        }

        .circle-icon {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .contact-box {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #0288d1;
            color: white;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 2px 4px 8px rgba(0,0,0,0.2);
        }

        .top-bar {
            background-color: #fff;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ccc;
