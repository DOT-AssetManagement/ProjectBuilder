@using ProjectBuilder.Web.MVC.Models;
@model ParameterViewModel
@{
    ViewData["Title"] = "Parameters";
}

@* <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script> *@
<table class="table table-bordered table-hover table-striped" id="parameterTable" style="width:100%;margin-top:5px;">
    <thead class="bg-success text-white">
        <tr>
            <th>
                Id
            </th>
            <th>
                Default Value
            </th>
            <th>
                New Actions
            </th>
        </tr>
    </thead>
    <tbody id="parameterTableBody">
        <!-- Records will be dynamically added here -->
    </tbody>
</table>

@*Delete Modal*@

<div class="modal fade" id="deletealert" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="deletealertLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletealertLabel">Delete Parameter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <i class="bi bi-exclamation-octagon-fill text-danger fa-2x me-3"></i>
                <span>
                    Are you sure you want to delete the selected Parameter ?
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form id="deleteform" asp-antiforgery="true" asp-action="DeleteParameter" asp-controller="Parameter"
                    method="post">
                    <input asp-for="ParameterId" id="paramId" name="ParameterId" hidden />
                    <input asp-for="Parmfamily" id="parmfamily" name="Parmfamily" hidden />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@*Edit Modal*@

<div class="modal fade" id="EditParameterForm" tabindex="-1" role="dialog" aria-labelledby="EditParameterFormLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditParameterFormLabel">Edit Parameter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="editParameter" class="needs-validation" asp-controller="Parameter" asp-action="EditParameter"
                method="post">
                <div class="modal-body">
                    <input asp-for="ParameterId" id="ParameterId" type="text" name="ParameterId" class="form-control"
                        hidden />
                    <input asp-for="Parmfamily" id="Parmfamily" type="text" name="Parmfamily" class="form-control"
                        hidden />
                    <div class="mb-3">
                        <label for="DefaultValue" class="form-label">DefaultValue</label>
                        <input asp-for="DefaultValue" id="DefaultValue" type="text" name="DefaultValue"
                            class="form-control" required />
                        <div class="invalid-feedback">Field is required</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" onclick="onSaveParameter()">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        $.ajax({
            url: "/Parameter/GetAllparameters",
            type: "GET",
            dataType: "json",
            success: function (response) {
                if (response && response.length > 0) {
                    var tableBody = $("#parameterTableBody");

                    $.each(response, function (index, row) {
                        var rowHtml = "<tr data-toggle='tooltip' title='" + row.parmDescription + "'>";
                        rowHtml += "<td>" + row.parameterId + "</td>";
                        rowHtml += "<td>" + row.defaultValue + "</td>";

                        // Add a button in the last column for the dropdown
                        rowHtml += "<td><div class='dropdown'>" +
                            "<button class='btn btn-secondary circlebutton' " +
                            "type='button' id='dropdownMenuButton1' " +
                            "data-bs-toggle='dropdown' aria-expanded='true'>" +
                            "<i context-menu='' class='fa-solid fa-ellipsis-vertical'></i>" +
                            "</button>" +
                            "<ul class='dropdown-menu' aria-labelledby='dropdownMenuButton1' " +
                            "data-popper-placement='bottom-end' style='position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(-134px, 32px);'>" +
                            "<li> " +
                            "<button type='button' onclick='oneditingParam.bind(this)()' data-parameter-id='" + row.parameterId + "' data-parameter-family='" + row.parmfamily + "' value='" + row.parameterId + "' class='btn mb-1'>" +
                            "<i class='bi bi-pencil-square'></i> Edit" +
                            "</button>" + " </li>" +
                            "</ul>" +
                            "</div></td>";

                        rowHtml += "</tr>";

                        tableBody.append(rowHtml);
                    });

                    // Initialize Bootstrap tooltips

                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    });

    document.getElementById("searchInput").addEventListener("input", function () {
        var input, filter, table, tr, td, i, txtValue;
        input = this;
        filter = input.value.toUpperCase();
        table = document.getElementById("parameterTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those that don't match the search query
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0]; // Change index to match the column you want to search
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    });

    function oneditingParam() {
        var parameterId = this.getAttribute('data-parameter-id');
        var parmfamily = this.getAttribute('data-parameter-family');

        var row = $(this).closest('tr');

        $('#DefaultValue').val(row.find('td:eq(1)').text());
        $('#ParameterId').val(parameterId);

        var model = document.getElementById('EditParameterForm');
        var formModel = bootstrap.Modal.getOrCreateInstance(model);
        formModel.show();
    }
    function ondeletingParameter() {
        var row = $(this).closest('tr');

        // Display a confirmation dialog (optional)
        if (confirm("Are you sure you want to delete this parameter?")) {
            // Remove the row from the DataTable
            $('#parameterTable').DataTable().row(row).remove().draw(false);
        }
    }
    function onSaveParameter() {
        var defaultValue = $('#DefaultValue').val();
        var parameterId = $('#ParameterId').val();
        var row = $('button[data-parameter-id="' + parameterId + '"]').closest('tr');
        row.find('td:eq(1)').text(defaultValue);

        var model = document.getElementById('EditParameterForm');
        var formModel = bootstrap.Modal.getOrCreateInstance(model);
        formModel.hide();
    }
    function ondeletingParameter() {
        var parameterId = this.getAttribute('data-parameter-id');
        var parmfamily = this.getAttribute('data-parameter-family');
        $.ajax(
            {
                type: 'Get',
                dataType: 'JSON',
                url: '/Parameter/GetParameter',
                data: {
                    parameterId: parameterId,
                    parmfamily: parmfamily
                },
                success:
                    function (response) {
                        debugger;
                        var form = document.getElementById('deleteform');
                        $('#parmfamily').val(response.parmfamily);
                        $('#paramId').val(response.parameterId);
                    },
                error:
                    function (response) {
                    }
            });
    }

</script>