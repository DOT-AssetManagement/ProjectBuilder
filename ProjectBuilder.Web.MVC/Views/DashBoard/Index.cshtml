            .top-bar img {
                height: 50px;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        #bg-video {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            object-fit: cover;
